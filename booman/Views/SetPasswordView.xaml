<UserControl x:Class="booman.Views.SetPasswordView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:booman.Views"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="300">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Nhập mật khẩu mới:"/>
            <TextBox x:Name="txtNewPassword" Margin="0,5"/>
            <TextBlock Text="Xác nhận mật khẩu:" Margin="0,10,0,0"/>
            <TextBox x:Name="txtConfirmPassword" Margin="0,5" TextChanged="txtConfirmPassword_TextChanged"/>
            <Button Content="Tạo Mật Khẩu" Click="CreatePassword_Click" HorizontalAlignment="Center" Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
